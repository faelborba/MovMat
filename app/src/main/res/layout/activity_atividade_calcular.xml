<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AtividadeCalcular">

    <TextView
        android:id="@+id/botaoCalcular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_button"
        android:gravity="center|center_horizontal"
        android:shadowColor="#FFFFFF"
        android:text="1. Somar"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/botaoSubtrai"
        app:layout_constraintEnd_toEndOf="@+id/botaoSubtrai"
        app:layout_constraintStart_toStartOf="@+id/botaoSubtrai"
        app:layout_constraintTop_toBottomOf="@+id/caolcular" />

    <TextView
        android:id="@+id/botaoSubtrai"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_button"
        android:gravity="center|center_horizontal"
        android:shadowColor="#FFFFFF"
        android:text="2. Subtrair"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/botaoMultiplica"
        app:layout_constraintEnd_toEndOf="@+id/botaoMultiplica"
        app:layout_constraintStart_toStartOf="@+id/botaoMultiplica"
        app:layout_constraintTop_toBottomOf="@+id/botaoCalcular" />

    <TextView
        android:id="@+id/botaoMultiplica"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_button"
        android:gravity="center|center_horizontal"
        android:shadowColor="#FFFFFF"
        android:text="3. Multiplicar "
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/botaoDvide"
        app:layout_constraintEnd_toEndOf="@+id/botaoDvide"
        app:layout_constraintStart_toStartOf="@+id/botaoDvide"
        app:layout_constraintTop_toBottomOf="@+id/botaoSubtrai" />

    <TextView
        android:id="@+id/botaoDvide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector_button"
        android:gravity="center|center_horizontal"
        android:shadowColor="#FFFFFF"
        android:text="4. Dividir "
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoMultiplica" />

    <TextView
        android:id="@+id/caolcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Selecione a Atividade"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/botaoCalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vamos Calcular" />
</androidx.constraintlayout.widget.ConstraintLayout>